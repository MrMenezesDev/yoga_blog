@import "tailwindcss";
@import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Lato:wght@300;400;600&display=swap');

:root {
  --background: #FDFBF7; /* Papel Antigo Warm White */
  --foreground: #44403C; /* Stone-700 Cinza Chumbo Quente */
  --charcoal: #2D2420; /* Marrom Café para títulos */
  --font-serif: 'Libre Baskerville', 'Georgia', serif;
  --font-sans: 'Lato', -apple-system, sans-serif;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-charcoal: var(--charcoal);
  --font-sans: var(--font-sans);
  --font-mono: var(--font-geist-mono);
  --font-serif: var(--font-serif);
  
  /* Paleta Terracota/Terra Orgânica */
  --color-terracota-50: #fef8f3;
  --color-terracota-100: #fdeee0;
  --color-terracota-200: #fad8b8;
  --color-terracota-300: #f7be8f;
  --color-terracota-400: #f39e5f;
  --color-terracota-500: #C05621;
  --color-terracota-600: #A84918;
  --color-terracota-700: #8A3C14;
  --color-terracota-800: #6D2F10;
  --color-terracota-900: #4F210B;
  
  /* Paleta de Categorias Acadêmicas */
  --color-filosofia: #9333ea; /* Purple-600 */
  --color-filosofia-light: #f3e8ff; /* Purple-50 */
  --color-pratica: #ea580c; /* Orange-600 */
  --color-pratica-light: #fff7ed; /* Orange-50 */
  --color-insight: #16a34a; /* Green-600 */
  --color-insight-light: #f0fdf4; /* Green-50 */
  --color-estudo: #0284c7; /* Sky-600 */
  --color-estudo-light: #f0f9ff; /* Sky-50 */
  --color-discussao: #7c3aed; /* Violet-600 */
  --color-discussao-light: #f5f3ff; /* Violet-50 */
  --color-ascensao: #10b981; /* Emerald-500 */
  --color-ascensao-light: #d1fae5; /* Emerald-100 */
  
  /* Sombras suaves editoriais */
  --shadow-editorial: 0 1px 3px 0 rgb(0 0 0 / 0.05), 0 1px 2px -1px rgb(0 0 0 / 0.05);
  --shadow-editorial-md: 0 4px 6px -1px rgb(0 0 0 / 0.05), 0 2px 4px -2px rgb(0 0 0 / 0.05);
  --shadow-editorial-lg: 0 10px 15px -3px rgb(0 0 0 / 0.05), 0 4px 6px -4px rgb(0 0 0 / 0.05);
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: #1c1917;
    --foreground: #e7e5e4;
    --charcoal: #f5f5f4;
  }
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-serif);
  line-height: 1.8;
  font-weight: 400;
  letter-spacing: 0.01em;
  font-size: 17px;
}

/* Títulos editoriais - sempre Serif */
h1, h2, h3, h4, h5, h6 {
  color: var(--charcoal);
  font-weight: 700;
  letter-spacing: -0.01em;
  line-height: 1.2;
  font-family: var(--font-serif);
}

/* Smooth scrolling for anchor links */
html {
  scroll-behavior: smooth;
}

/* Prose styles for MDX content - Editorial Book Style */
.prose {
  @apply leading-loose;
  color: var(--foreground);
  max-width: 65ch;
  font-family: var(--font-serif);
  font-size: 18px;
}

.prose h1 {
  @apply text-5xl font-bold mt-12 mb-8;
  color: var(--charcoal);
  font-family: var(--font-serif);
  letter-spacing: -0.02em;
}

.prose h2 {
  @apply text-4xl font-bold mt-10 mb-6;
  color: var(--charcoal);
  font-family: var(--font-serif);
}

.prose h3 {
  @apply text-3xl font-semibold mt-8 mb-5;
  color: var(--charcoal);
  font-family: var(--font-serif);
}

.prose h4 {
  @apply text-2xl font-semibold mt-6 mb-4;
  color: var(--charcoal);
  font-family: var(--font-serif);
}

.prose p {
  @apply mb-6 leading-loose;
  color: var(--foreground);
}

.prose em {
  @apply italic;
  color: var(--color-terracota-700);
}

.prose strong {
  @apply font-bold;
  color: var(--charcoal);
}

.prose a {
  @apply underline transition-colors;
  color: var(--color-terracota-600);
  text-decoration-thickness: 1px;
  text-underline-offset: 2px;
}

.prose a:hover {
  color: var(--color-terracota-700);
}

.prose ul, .prose ol {
  @apply mb-6 ml-6 space-y-3;
}

.prose li {
  @apply leading-loose;
  color: var(--foreground);
}

.prose code {
  @apply bg-stone-100 px-2 py-1 rounded text-sm;
  font-family: var(--font-geist-mono);
  color: var(--charcoal);
}

.prose pre {
  @apply p-4 rounded-lg overflow-x-auto mb-6;
  background: #2D2420;
  color: #FDFBF7;
  font-family: var(--font-geist-mono);
}

.prose blockquote {
  @apply border-l-4 pl-6 pr-4 py-3 italic my-8;
  border-color: var(--color-terracota-500);
  background: transparent;
  color: var(--foreground);
  font-size: 1.1em;
  line-height: 1.7;
}

/* Animations */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slide-in-from-top-2 {
  from {
    transform: translateY(-0.5rem);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes slideUpAndFade {
  from {
    opacity: 0;
    transform: translateY(2px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDownAndFade {
  from {
    opacity: 0;
    transform: translateY(-2px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-in {
  animation: fade-in 0.2s ease-out, slide-in-from-top-2 0.2s ease-out;
}

.animate-slideUpAndFade {
  animation: slideUpAndFade 300ms cubic-bezier(0.16, 1, 0.3, 1);
}

.animate-slideDownAndFade {
  animation: slideDownAndFade 300ms cubic-bezier(0.16, 1, 0.3, 1);
}

